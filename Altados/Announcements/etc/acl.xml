<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <!-- Main Announcements Menu -->
                <resource id="Altados_Announcements::announcements" title="Announcements" sortOrder="51">

                    <!-- Manage Announcements Section -->
                    <resource id="Altados_Announcements::announcement_manage" title="Manage Announcements" sortOrder="10">
                        <!-- Operations -->
                        <resource id="Altados_Announcements::announcement_view" title="View Announcements" sortOrder="10" />
                        <resource id="Altados_Announcements::announcement_create" title="Create Announcements" sortOrder="20" />
                        <resource id="Altados_Announcements::announcement_edit" title="Edit Announcements" sortOrder="30" />
                        <resource id="Altados_Announcements::announcement_delete" title="Delete Announcements" sortOrder="40" />
                        <resource id="Altados_Announcements::announcement_save" title="Save Announcements" sortOrder="50" />
                        <resource id="Altados_Announcements::announcement_mass_delete" title="Mass Delete" sortOrder="10" />
                    </resource>

                    <!-- Configuration Section -->
                    <resource id="Altados_Announcements::announcement_configuration" title="Configuration" sortOrder="20" />
                </resource>
            </resource>
        </resources>
    </acl>
</config>
